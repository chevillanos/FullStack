<% if (locals.posts && locals.posts.length > 0) { %>
  <% posts.forEach((post) => { %>
    <div class="container blogPost">
      <p><%= post %></p>
    </div>
  <% })} else { %>
    <div class="container blogPost">
      <p>Start posting now!!</p>
    </div>
  <% } %>


